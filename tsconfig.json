{
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@pages/*": ["pages/*"],
			"@style/*": ["style/*"],
			"@images/*": ["images/*"]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"strict": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["vite/client", "node"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
